
public class Container {
	private int size;
	
	synchronized
	public void put() throws InterruptedException{
		while(size==1)
			this.wait();
		
		Thread.sleep(500);
		System.out.println("Producing a product");
		
		size=1;
		
		this.notify();
	}
	
   synchronized
	public void get() throws InterruptedException{
	   
		while(size!=1)
			this.wait();
		
		Thread.sleep(1000);
		
		System.out.println("Consuming a product");
		
		size=0;
		
		this.notify();
		
	}
}
